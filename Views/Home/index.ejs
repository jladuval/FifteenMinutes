<% layout('../Shared/layout') -%>
<div class="right-link">
	<a href="/List?page=1">Read finished stories</a>
</div>
<form method="POST" action="/" id="storyform" autocomplete="off">
    <% if(sentences != null && sentences.length != 0){ %>
		<% block('header', "Continue the story") -%>
		<div class="current-story">
			<h2>The last lines of "<%= title %>"</h2>
			<% sentences.forEach(function(sentence){ %>
				<p><%= sentence.text %></p>
			<% }); %>
		</div>
    <% } else { %>
	<% block('header', "Start a story") -%>
	<div class="row-fluid inputwrapper">
		<div class="span12">
			<input class="title-input story-input" maxlength="45" type="text" name="title" placeholder = "Give this story a title"/>
		 </div>
	 </div>
    <% } %>
	<div class="row-fluid inputwrapper">
		<div class="span12">
			<input type="text" class="sentence-input story-input required" maxlength="300" name="sentence" placeholder = "Add a line to this story" />
			<% if(objectId){ %>
			<input type = "hidden" value = "<%= objectId %>" name="objectId" />
			<% } %>
		 </div>
	</div>
	<div class="row-fluid inputwrapper">
		<div class="span12">
			<% if(sentences != null && sentences.length != 0){ %>
				<input class="btn btn-info btn-large" name="submit" type="submit" value = "Submit"/>
				<input id="end" class="btn btn-danger btn-large" name="submit" type="submit" value = "The End"/>
			<%} else{ %>
				<input class="btn btn-info btn-large" name="submit" type="submit" value = "Submit"/>				
			<%} %>
		 </div>
	</div>
        
</form>
<script src="http://code.jquery.com/jquery-latest.js"></script>           
<script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.7/jquery.validate.js"></script>
<script type="text/javascript" src="/Js/stories.js"></script> 
    
